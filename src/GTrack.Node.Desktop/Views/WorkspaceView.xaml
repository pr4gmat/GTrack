<UserControl x:Class="GTrack.Node.Desktop.Views.WorkspaceView" mc:Ignorable="d"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:prism="http://prismlibrary.com/"
             Background="{DynamicResource ApplicationBackgroundBrush}"
             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <ui:NavigationView IsBackButtonVisible="Collapsed">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Главная" Icon="{ui:SymbolIcon Home24}"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="GTrackNodeView"/>
                
                <ui:NavigationViewItem Content="Сервер / Клиент" Icon="{ui:SymbolIcon Server24}">
                    <ui:NavigationViewItem.MenuItems>
                        <ui:NavigationViewItem Content="Station сервер" Icon="{ui:SymbolIcon Server24}"
                                               Command="{Binding NavigateCommand}"
                                               CommandParameter="StationServerView"/>
                        <ui:NavigationViewItem Content="Node клиент" Icon="{ui:SymbolIcon ServerSurfaceMultiple16}"
                                               Command="{Binding NavigateCommand}"
                                               CommandParameter="NodeClientView"/>
                    </ui:NavigationViewItem.MenuItems>
                </ui:NavigationViewItem>
                
                <ui:NavigationViewItem Content="Наблюдатель" Icon="{ui:SymbolIcon Video24}"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="ObserverMapView"/>
                
                <ui:NavigationViewItem Content="Мониторинг" Icon="{ui:SymbolIcon DocumentTextLink20}"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="MonitoringView"/>
            </ui:NavigationView.MenuItems>
            
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="Настройки" Icon="{ui:SymbolIcon Settings24}"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="SettingView"/>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>
        
        <ContentControl Grid.Column="1" prism:RegionManager.RegionName="WorkspaceRegion"/>
    </Grid>
</UserControl>