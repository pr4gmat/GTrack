<UserControl x:Class="GTrack.Node.Desktop.Views.GTrackNodeView" mc:Ignorable="d"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Background="{DynamicResource ApplicationBackgroundBrush}"
             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <Style x:Key="ServerStatusEllipseStyle" TargetType="Ellipse">
            <Setter Property="Fill" Value="Red"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="True">
                    <Setter Property="Fill" Value="Lime"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="False">
                    <Setter Property="Fill" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <ui:CardControl Header="Статус клиента Node" Margin="0,0,10,0"
                                DataContext="{Binding NodeClient}">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Height="15" Width="15" Style="{StaticResource ServerStatusEllipseStyle}" Margin="0,0,5,0"/>
                    </StackPanel>
                </ui:CardControl>

                <ui:CardControl Header="Статус сервера Station" Margin="0,5,10,0"
                                DataContext="{Binding StationServer}">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Height="15" Width="15" Style="{StaticResource ServerStatusEllipseStyle}" Margin="0,0,5,0"/>
                    </StackPanel>
                </ui:CardControl>
            </StackPanel>
            
            <ui:CardControl Header="Местоположение наблюдателя">
                <StackPanel>
                    <TextBlock Text="{Binding CurrentObserverLocation.Name, StringFormat=Имя: {0}}" />
                    <TextBlock Text="{Binding CurrentObserverLocation.Latitude, StringFormat=Широта: {0:F6}}" />
                    <TextBlock Text="{Binding CurrentObserverLocation.Longitude, StringFormat=Долгота: {0:F6}}" />
                    <TextBlock Text="{Binding CurrentObserverLocation.Height, StringFormat=Высота: {0} m}" />
                </StackPanel>
            </ui:CardControl>
        </StackPanel>
        
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="GTrack-Station"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,0"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding Stations}"
                         SelectedItem="{Binding SelectedStation, Mode=TwoWay}"
                         DisplayMemberPath="Id"
                         ScrollViewer.CanContentScroll="True"
                         Margin="0,10,0,0"/>
            </Grid>
            
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="Параметры слежения"
                           FontSize="16"
                           FontWeight="Bold"/>
                
                <ItemsControl Grid.Row="1" ItemsSource="{Binding ObservationParameters}"
                              Margin="0,10,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Time:" FontWeight="Bold" />
                                <TextBlock Text="{Binding Time}" Grid.Row="0" Margin="100,0,0,0"/>

                                <TextBlock Text="Name:" FontWeight="Bold" Grid.Row="1"/>
                                <TextBlock Text="{Binding Name}" Grid.Row="1" Margin="100,0,0,0"/>

                                <TextBlock Text="Azimuth:" FontWeight="Bold" Grid.Row="2"/>
                                <TextBlock Text="{Binding Azimuth}" Grid.Row="2" Margin="100,0,0,0"/>

                                <TextBlock Text="Elevation:" FontWeight="Bold" Grid.Row="3"/>
                                <TextBlock Text="{Binding Elevation}" Grid.Row="3" Margin="100,0,0,0"/>

                                <TextBlock Text="Range:" FontWeight="Bold" Grid.Row="4"/>
                                <TextBlock Text="{Binding Range}" Grid.Row="4" Margin="100,0,0,0"/>

                                <TextBlock Text="Doppler:" FontWeight="Bold" Grid.Row="5"/>
                                <TextBlock Text="{Binding Doppler}" Grid.Row="5" Margin="100,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
