<UserControl x:Class="GTrack.Node.Desktop.Views.ObserverMapView" mc:Ignorable="d"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             Background="{DynamicResource ApplicationBackgroundBrush}"
             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Наблюдатель"
                   FontSize="24"
                   FontWeight="Bold"/>
        
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="ObserverMapRegion"
                        Margin="0,10,0,0"/>
        
        <DataGrid Grid.Row="2" ItemsSource="{Binding ObserverLocations}"
                  SelectedItem="{Binding SelectedObserverLocation}"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  IsReadOnly="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Широта" Binding="{Binding Latitude}" Width="*"/>
                <DataGridTextColumn Header="Долгота" Binding="{Binding Longitude}" Width="*"/>
                <DataGridTextColumn Header="Высота" Binding="{Binding Height}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="Добавить"
                    Command="{Binding AddObserverLocationCommand}"
                    Width="120"
                    Margin="0,0,10,0"/>
                
            <Button Content="Удалить"
                    Command="{Binding DelObserverLocationCommand}"
                    Width="120"
                    Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</UserControl>
