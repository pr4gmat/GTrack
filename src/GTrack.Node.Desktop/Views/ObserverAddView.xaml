<UserControl x:Class="GTrack.Node.Desktop.Views.ObserverAddView" mc:Ignorable="d"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Height="400" Width="600"
             Background="{DynamicResource ApplicationBackgroundBrush}"
             Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <StackPanel Margin="20">
        <TextBlock Text="Название:"/>
        <TextBox Text="{Binding ObserverLocation.Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>

        <TextBlock Text="Широта:"/>
        <TextBox Text="{Binding ObserverLocation.Latitude, UpdateSourceTrigger=PropertyChanged, StringFormat=N10}" Margin="0,5,0,10"/>

        <TextBlock Text="Долгота:"/>
        <TextBox Text="{Binding ObserverLocation.Longitude, UpdateSourceTrigger=PropertyChanged, StringFormat=N10}" Margin="0,5,0,10"/>

        <TextBlock Text="Высота:"/>
        <TextBox Text="{Binding ObserverLocation.Height, UpdateSourceTrigger=PropertyChanged, StringFormat=N10}" Margin="0,5,0,10"/>

        <Button Content="Добавить"
                Command="{Binding AddCommand}"
                HorizontalAlignment="Center"
                Width="150" Margin="0,20,0,0"/>
    </StackPanel>
</UserControl>
