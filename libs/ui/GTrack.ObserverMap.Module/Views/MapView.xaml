<UserControl x:Class="GTrack.ObserverMap.Module.Views.MapView" mc:Ignorable="d"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:attached="clr-namespace:GTrack.ObserverMap.Module.Attached"
             xmlns:windowsPresentation="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             xmlns:gmap="clr-namespace:GMap.NET.MapProviders;assembly=GMap.NET.Core">
    <windowsPresentation:GMapControl
        x:Name="Map"
        Zoom="{Binding Zoom, Mode=TwoWay}"
        MinZoom="2"
        MaxZoom="18"
        CanDragMap="True"
        MouseWheelZoomEnabled="True"
        MouseWheelZoomType="MousePositionAndCenter"
        MapProvider="{x:Static gmap:GoogleHybridMapProvider.Instance}"
        attached:GMapBindings.Center="{Binding Center}"
        attached:GMapBindings.Markers="{Binding Markers}"
        attached:GMapBindings.SatelliteMarkers="{Binding SatelliteMarkers}"/>
</UserControl>